@model KUSYSDemo.Models.Entity.Student
@{
    var returnUrl = ViewData["ReturnUrl"] as string;
    var hata = TempData["Error"] as string;
}
<!doctype html>
<html lang="en">
<head>
    <title>Login 01</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link href="https://fonts.googleapis.com/css?family=Lato:300,400,700&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

    <link rel="stylesheet" href="Folders/css/style.css">

</head>
<body>
    <section class="ftco-section">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6 text-center mb-5">
                    <h2 class="heading-section"> </h2>
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col-md-7 col-lg-5">
                    <div class="login-wrap p-4 p-md-5">
                        <div class="icon d-flex align-items-center justify-content-center">
                            <span class="fa fa-user-o"></span>
                        </div>
                        <h3 class="text-center mb-4">Giriş Yap</h3>
                        <form action="/login?ReturnUrl=@System.Net.WebUtility.UrlDecode(returnUrl)" method="post" class="login-form">
                            <div class="form-group">
                                <input type="text" name="LoginUserName" class="form-control rounded-left" placeholder="Kullanıcı Adı" required>
                            </div>
                            <div class="form-group d-flex" style="margin-top:20px">
                                <input type="password" name="LoginPassword" class="form-control rounded-left" placeholder="Şifre" required>
                            </div>
                            <div class="form-group" style="margin-top:20px">
                                <button type="submit" class="form-control btn btn-primary rounded submit px-3">Giriş Yapın</button>
                                <h5 class="alert-danger text-center mb-4" style="color:red">@hata </h5>

                            </div>

                            <div class="form-group d-md-flex" style="margin-top:10px">
                                <div class="w-50">
                                    <label class="checkbox-wrap checkbox-primary">
                                        Beni Hatırla
                                        <input type="checkbox" checked>
                                        <span class="checkmark"></span>
                                    </label>

                                </div>
                                <div class="w-50 text-md-right" style="margin-top:20px">
                                    <a href="#">Şifreni mi unuttun!</a>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <script src="Folders/js/jquery.min.js"></script>
    <script src="Folders/js/popper.js"></script>
    <script src="Folders/js/bootstrap.min.js"></script>
    <script src="Folders/js/main.js"></script>

</body>
</html>